@model Rocky.Models.Category

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Category</h2>
        </div>

        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Name" class="col-form-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="col-6">
                <label asp-for="DisplayOrder" class="col-form-label"></label>
                <input type="text" asp-for="DisplayOrder" class="form-control" />
            </div>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <button type="button" class="btn btn-outline-info w-100">Create</button>
            </div>
            <div class="col-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-info w-100">Back</a>
            </div>
        </div>
    </div>
</form>
